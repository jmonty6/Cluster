<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
                <!-- Customize your theme here. -->
                <item name="colorPrimary">@color/colorPrimary</item>
                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="colorAccent">@color/colorAccent</item>
                <item name="android:textColorPrimary">@color/primary_text_default_material_dark
                </item>
                <item name="android:colorBackground">@color/material_grey_850</item>
                <item name="android:textColorSecondary">
                        @color/secondary_text_default_material_dark
                </item>
                <item name="android:navigationBarColor">@color/material_grey_850</item>
        </style>

        <style name="AppTheme.Light" parent="Theme.AppCompat.NoActionBar">
                <!-- Customize your theme here. -->
                <item name="colorPrimary">@color/colorPrimary</item>
                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="colorAccent">@color/colorAccent</item>
                <item name="android:textColorPrimary">@color/primary_text_default_material_dark</item>
                <item name="android:colorBackground">@color/backgroundLight</item>
                <item name="android:textColorSecondary">
                        @color/secondary_text_default_material_dark
                </item>
                <item name="android:navigationBarColor">@android:color/black</item>
                <item name="android:colorForeground">@color/foreground_material_dark</item>
        </style>

        <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
                <!-- Customize your theme here. -->
                <item name="colorPrimary">@color/colorPrimary</item>
                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="colorAccent">@color/colorAccent</item>
                <item name="android:textColorPrimary">@color/primary_text_default_material_dark</item>
                <item name="android:colorBackground">@color/backgroundDark</item>
                <item name="android:navigationBarColor">@android:color/black</item>
                <item name="android:textColorSecondary">@color/secondary_text_material_dark</item>
        </style>
</resources>