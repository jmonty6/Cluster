<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height">

    <ImageView
        android:id="@+id/header_profile_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/logoBackground"
        android:scaleType="centerCrop"
        android:src="@color/colorPrimary"
        app:srcCompat="@drawable/defaultprofile" />

    <View
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/header_gradient"
        android:layout_gravity="bottom"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_smormal"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:id="@+id/header_change_profile_button"
        android:gravity="start|center_vertical"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/ic_arrow_drop_down_white_24dp"
        android:text="@string/default_profile"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="@color/toolbar_text_color" />

</FrameLayout>